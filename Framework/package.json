{
  "name": "@aliceo2/web-ui",
  "version": "1.9.0",
  "description": "ALICE O2 Web UX framework",
  "author": "Adam Wegrzynek",
  "license": "GPL-3.0",
  "repository": "AliceO2Group/WebUi",
  "homepage": "https://alice-o2.web.cern.ch",
  "scripts": {
    "test": "npm run eslint && npm run mocha",
    "coverage": "nyc mocha ./Backend/test/ --exit",
    "mocha": "npm run mocha-frontend && npm run mocha-backend",
    "mocha-frontend": "mocha --exit ./Frontend/test/",
    "mocha-backend": "mocha --exit ./Backend/test/",
    "eslint": "eslint --config ../.eslintrc.js Backend/ Frontend/ docs/tutorial/*.js",
    "doc-frontend": "jsdoc2md --files \"./Frontend/**/*.js\" -p list -r list --member-index-format list --name-format --no-gfm -l js > ./docs/reference/frontend-api.md"
  },
  "nyc": {
    "exclude": [
      "Backend/test/**/*"
    ]
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.17.1",
    "simple-oauth2": "^2.2.1",
    "winston": "^3.2.1",
    "ws": "^7.0.0"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.13.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "puppeteer": "^1.17.0"
  },
  "main": "Backend/index.js"
}
