  "devDependencies": {
    "concurrently": "^3.5.1",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "mocha": "^5.1.1",
    "nodemon": "1.17.3",
    "puppeteer": "^1.3.0"
  }
